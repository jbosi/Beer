{
	"eslint.options": {
		"extensions": [".ts", ".js", ".html"]
	},
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact",
		"html"
	],
	// set prettier as default formatter
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"prettier.tabWidth": 4,
	"prettier.useTabs": true,
	// default to true to format .scss and .json files with prettier
	"editor.formatOnSave": true,
	// deactivate in javascript, typescript and html files
	"[javascript]": {
		"editor.formatOnSave": false
	},
	"[typescript]": {
		"editor.formatOnSave": false
	},
	"[html]": {
		"editor.formatOnSave": false
	},
	// let eslint fix issues on save
	"editor.codeActionsOnSave": {
		"source.fixAll": true
	}
}
